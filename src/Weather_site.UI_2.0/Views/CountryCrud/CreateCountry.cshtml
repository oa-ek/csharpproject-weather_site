@{
    ViewBag.Title = "CountryAdd";
}
@model Weather_site.Core.Entities.Country

<h1>Create Country Entry</h1>

<form asp-action="CreateCountry" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                @Html.LabelFor(model => model.Name, "Name")
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <button class="btn btn-primary btn-block" type="submit">Save</button>
        </div>
    </div>
</form>

<h2>Existing Countries</h2>
<table class="table" style="color: white;">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in ViewBag.Countries as List<Weather_site.Core.Entities.Country>)
        {
                <tr>
                    <td>@country.Name</td>
                    <td>
                        <a asp-action="EditCountry" asp-route-id="@country.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="DeleteCountry" asp-route-id="@country.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


